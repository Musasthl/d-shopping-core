@using Website.ExtensionMethod
@model IList<Service.DTO.CommentDto>

@if (Model != null && Model.Any())
{
    foreach (var comment in Model)
    {
        <div style="border-bottom: 1px solid #e7e7e7; margin-top: 20px; margin-left: 10px;">
            <span style="color: #d8b299; font-size: 10px;">@comment.CreatedDate.ToShortDateString() :</span>
            <span style="color: #2793e9; font-size: 16px; margin-left: 20px;">@comment.Name</span> 
                        <br /> <br />
            <span style="margin-left: 85px;"> @comment.Content</span>
        </div>
    }
}