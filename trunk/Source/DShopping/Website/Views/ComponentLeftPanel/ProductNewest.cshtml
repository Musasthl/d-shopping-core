@using System.Activities.Statements
@using Website.ExtensionMethod
@model IList<Service.DTO.ProductOverviewDto>


<div class="d-left-box">
    <div class="d-left-box-heading">
        Sản phẩm Mới nhất
    </div>
    <div class="d-left-box-body">
        @if (Model != null)
        {

            foreach (var product in Model)
            {
                
            <div class="d-left-box-body-item">
                <table>
                    <tr>
                        <td class="d-left-box-image"><a href="@Url.Action("ProductDetail", "Home")?productCode=@product.Code"><img src="@Url.ImageProduct(product.Image)" width="60" height="40" /></a></td>
                        <td style="padding-left:2px;padding-right:2px;">
                            <a href="@Url.Action("ProductDetail", "Home")?productCode=@product.Code" class="d-left-box-title">@product.Name</a>
                            <div class="d-split-row"></div>
                            <div class="d-left-box-price">@product.Price đ</div>
                        </td>
                    </tr>
                </table>
            </div>
            }
        }
    </div>

</div>
